<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp">

    <ImageView
        android:id="@+id/photo_restaurant"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_restaurant"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginStart="4dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="La Casa di Pizza"/>

    <TextView
        android:id="@+id/adress_restaurant"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginStart="4dp"
        android:textSize="8sp"
        app:layout_constraintTop_toBottomOf="@+id/name_restaurant"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="24 Rue des glandus"/>

    <TextView
        android:id="@+id/open_hour"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginStart="4dp"
        android:textSize="8sp"
        app:layout_constraintTop_toBottomOf="@id/adress_restaurant"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Open until 7pm"/>

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toLeftOf="@+id/photo_restaurant"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="120m"/>

    <TextView
        android:id="@+id/number_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toLeftOf="@id/photo_restaurant"
        app:layout_constraintTop_toBottomOf="@id/distance"
        tools:text="(3)"/>

    <ImageView
        android:id="@+id/icon_person"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/baseline_perm_identity_24"
        app:layout_constraintTop_toBottomOf="@id/distance"
        app:layout_constraintRight_toLeftOf="@id/number_person"/>

    <ImageView
        android:id="@+id/icon_star_rating_1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/baseline_star_rate_24"
        app:layout_constraintTop_toBottomOf="@id/number_person"
        app:layout_constraintRight_toLeftOf="@id/photo_restaurant"/>

    <ImageView
        android:id="@+id/icon_star_rating_2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/baseline_star_rate_24"
        app:layout_constraintTop_toBottomOf="@id/number_person"
        app:layout_constraintRight_toLeftOf="@id/icon_star_rating_1"/>

    <ImageView
        android:id="@+id/icon_star_rating_3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/baseline_star_rate_24"
        app:layout_constraintTop_toBottomOf="@id/number_person"
        app:layout_constraintRight_toLeftOf="@id/icon_star_rating_2"/>


</androidx.constraintlayout.widget.ConstraintLayout>

