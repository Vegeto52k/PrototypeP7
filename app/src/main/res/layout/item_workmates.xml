<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo_workmates"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/name_workmates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        android:maxWidth="300dp"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="@id/photo_workmates"
        app:layout_constraintBottom_toBottomOf="@id/photo_workmates"
        app:layout_constraintLeft_toRightOf="@+id/photo_workmates"
        tools:text="Arthur is eating La Remise"/>

</androidx.constraintlayout.widget.ConstraintLayout>